<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/slide_img_vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/smoothie_redfruit" />

    <TextView
        android:id="@+id/smoothie_heading"
        android:layout_width="244dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:gravity="center"
        android:text="Red Fruit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/smoothie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/smoothie_heading"
        android:layout_marginTop="-67dp"
        android:gravity="center"
        android:text="Smoothie" />

    <TextView
        android:id="@+id/see_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="See Details"
        android:textColor="@color/colorTeal"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:progressTint="@color/colorTeal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:numStars="5"
        android:rating="4"/>

</RelativeLayout>
