<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slide_imgview"
        android:layout_width="253dp"
        android:layout_height="273dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        app:srcCompat="@drawable/discoversmoothies" />

    <TextView
        android:id="@+id/slideheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slide_imgview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-59dp"
        android:gravity="center"
        android:text="Discover smoothies"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slidedescription"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Discover thousands of tasty smoothies for any drink enthusiast"
        android:textSize="12sp" />
</RelativeLayout>